{
  "name": "css-value2design-token",
  "displayName": "CSS Value to Design Token",
  "description": "",
  "version": "0.0.1",
  "publisher": "gary",
  "engines": {
    "vscode": "^1.80.0"
  },
  "keywords": [
    "css",
    "design token",
    "tailwindcss",
    "token",
    "value2token",
    "theme"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "css-value2design-token.findAndReplace",
        "title": "Find Design Token"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "css-value2design-token.findAndReplace",
          "group": "navigation@9",
          "when": "editorHasSelection || editorTextFocus"
        }
      ]
    },
    "keybindings": [
      {
        "command": "css-value2design-token.findAndReplace",
        "key": "cmd+shift+t",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "CSS Value → Design Token",
      "properties": {
        "css-value2design-token.sources": {
          "type": "array",
          "default": [
            "src/**/*.css"
          ],
          "description": "文件路径 (glob)，用于扫描 css 中的 design tokens"
        }
      }
    }
  },
  "scripts": {
    "commit": "git-cz --disable-emoji",
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "package:vsix": "pnpm run package && npx vsce package --no-dependencies --skip-license",
    "install:local": "pnpm run package:vsix && cursor --install-extension css-value2design-token-*.vsix",
    "install:local:vscode": "pnpm run package:vsix && code --install-extension css-value2design-token-*.vsix",
    "uninstall:local": "cursor --uninstall-extension gary.css-value2design-token",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.1",
    "eslint": "^9.34.0",
    "git-cz": "^4.9.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@types/css-tree": "^2.3.10",
    "css-tree": "^3.1.0",
    "glob": "^11.0.3"
  }
}
